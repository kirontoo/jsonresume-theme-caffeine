{{#if resume.projects.length}}
<div class="container work-container">
    {{> title value="Projects"}}

    {{#each resume.projects}}
        <section class="item">
            {{> section-header name=this.name }}

            {{#if position}}
            <h4>{{position}}</h4>
            {{/if}}

            {{#if summary}}
            <p class="summary">{{summary}}</p>
            {{/if}}

            {{#if highlights.length}}
            <ul>
                {{#each highlights}}
                <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </section>
    {{/each}}
</div>
{{/if}}